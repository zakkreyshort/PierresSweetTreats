@{
  Layout = "_Layout";
}

@model Pierres.Models.Flavor

<h4>Add a new flavor to treat</h4>
<hr />

<div class ="col-md-8 offset-md-2">
  @using (Html.BeginForm())
  {
      @Html.Label("Book Title:")
      @Html.TextBoxFor(model => model.FlavorName, new { @class = "form-control", required="required"})
  <br>
      @Html.Label("Select treat:")
      <br>
      @Html.DropDownList("TreatId")
  <br>
  <br>
      <input type="submit" value="Add new flavor" class="btn btn-dark" />
  }
</div>