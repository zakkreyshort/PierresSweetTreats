@{
  Layout = "_Layout";
}

@model Pierres.Models.Patron

<h2>Add a flavor</h2>

<h4>Add a flavor to this patron for checkout: @Html.DisplayFor(model => model.PatronName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.PatronId)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Buy Treat!" class="btn btn-dark"/>
}

<p class="btn btn-dark">@Html.ActionLink("Back to list", "Index")</p>